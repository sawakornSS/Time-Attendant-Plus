@model IEnumerable<backend_TimeAttPlus.Models.Request>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LeaveType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveDtTmFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveDtTmTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveDtTmFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveDtTmTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LeaveNo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LeaveNo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LeaveNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
